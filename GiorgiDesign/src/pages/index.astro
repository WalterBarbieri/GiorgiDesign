---
import "../styles/global.css";
---

<html lang="it">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>GiorgiDesign</title>
    <base href="/" />
    <link rel="icon" href="/logo/logo.webp" type="image/x-icon" />
  </head>
  <body class="font-sans">
    <!-- Navbar -->
    <nav class="fixed top-0 w-full bg-pink-100 shadow z-50 h-32">
      <img
        src="/logo/marchio.webp"
        alt="GiorgiDesign Logo"
        class="mx-auto mt-3"
      />
      <ul
        class="flex justify-center space-x-6 p-4 text-pink-500 font-bold text-sm"
      >
        <li><a href="#home" data-link="home">HOME</a></li>
        <li><a href="#about" data-link="about">ABOUT</a></li>
        <li><a href="#services" data-link="services">SERVICE</a></li>
        <li><a href="#contact" data-link="contact">CONTACT</a></li>
      </ul>
    </nav>

    
    <div
      class="snap-y snap-mandatory overflow-y-scroll h-screen scroll-smooth overscroll-y-contain scroll-hidden bg-pink-100 text-pink-500"
    >
    <!-- Main -->
      <main class="pt-32">
        <section
          id="home"
          class="scroll-mt-32 h-[calc(100vh-128px)] w-auto snap-start flex items-center justify-center"
        >
          <img
            src="/images/12145.jpg"
            alt="Home"
            class="w-full max-w-4xl max-h-[calc(100vh-128px)] mx-auto object-contain"
          />
        </section>

        <section
          id="about"
          class="scroll-mt-32 h-[calc(100vh-128px)] snap-start flex items-center px-10"
        >
          <div
            class="flex flex-col md:flex-row items-center gap-10 max-w-6xl mx-auto"
          >
            <img
              src="/images/12145.jpg"
              alt="About"
              class="max-h-[calc((100vh-128px)/2)] md:w-1/2 md:h-auto object-contain border-none"
            />
            <div class="md:w-1/2">
              <h2 class="text-4xl mb-4">Chi siamo</h2>
              <p>
                Siamo GiorgiDesign, un team appassionato di design e sviluppo
                front-end moderno.
              </p>
            </div>
          </div>
        </section>

        <section
          id="services"
          class="scroll-mt-32 h-[calc(100vh-128px)] snap-start flex items-center px-10"
        >
          <div
            class="flex flex-col md:flex-row-reverse items-center gap-10 max-w-6xl mx-auto"
          >
            <img
              src="/images/12145.jpg"
              alt="Servizi"
              class="max-h-[calc((100vh-128px)/2)] md:w-1/2 md:h-auto object-contain border-none"
            />
            <div class="md:w-1/2">
              <h2 class="text-4xl mb-4">I nostri servizi</h2>
              <p>
                Offriamo design su misura, sviluppo web, e ottimizzazione per la
                visibilit√† online.
              </p>
            </div>
          </div>
        </section>
      </main>

    <!-- Footer -->
      <footer
        id="contact"
        class="scroll-mt-32 h-[calc(100vh-128px)] snap-start flex flex-col justify-between items-center text-center"
      >
        <!-- Blocco contatti -->
        <div class="max-w-2xl my-auto">
          <h2 class="text-4xl mb-4">Contattaci</h2>
          <p>
            Scrivici per un preventivo o una consulenza. Siamo a tua
            disposizione per ogni progetto!
          </p>
        </div>

        <!-- Blocco credits sempre in fondo -->
        <div class="bg-pink-200 text-pink-600 w-full py-6">
          <div class="max-w-6xl mx-auto text-xs">
            <p>
              &copy; {new Date().getFullYear()} GiorgiDesign. Tutti i diritti riservati.
            </p>
            <p class="mt-2">
              Sito realizzato con Astro + Tailwind CSS da
              <a
                href="https://walterbarbieri.it"
                target="_blank"
                referrerpolicy="no-referrer"
              >
                BWFullStackDeveloper
              </a>
            </p>
          </div>
        </div>
      </footer>
    </div>
    <script type="module" src="/src/scripts/nav-active.js"></script>
  </body>
</html>
